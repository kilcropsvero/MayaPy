import maya.cmds as mc

def body(*args):
    grp= mc.group(n="Proxy_RIG", empty=True)

    #LEGS
    mc.joint( p=(1.6, 25.5, -0.5), n="leg1" )
    mc.joint( p=(1.6, 14.8, -0.28), n="leg2"  )
    mc.joint( p=(1.6, 2, -1.6), n="leg3"  )
    mc.joint( p=(1.6, 0.02, 1), n="leg4"  )
    mc.joint( p=(1.6, -0.17, 3.5), n="leg5"  )

    #BRAZO
    mc.joint( p=(1.78, 40.1, -0.83), n="arm1" )
    mc.joint( p=(4.98, 40.5, -0.83), n="arm2" )
    mc.joint( p=(11.3, 40.5, -0.83), n="arm3" )
    mc.joint( p=(18.5, 40.5, -0.80), n="arm4" )

    #HAND
    first= mc.joint( p=(18.5, 40.5, -0.8), n="L_palm" )
    #PINKY
    mc.joint( p=(19.4, 40.2, -1.7), n="L_pinky01" )
    mc.joint( p=(21.3, 40.2, -1.7), n="L_pinky02" )
    mc.joint( p=(22.2, 40.2, -1.7), n="L_pinky03" )
    mc.joint( p=(22.9, 40.2, -1.7), n="L_pinky04" )
    mc.joint( p=(23.4, 40.2, -1.7), n="L_pinky05" )
    mc.select(first)
    #RING
    mc.joint( p=(19.4, 40.2, -1.2), n="L_ring01" )
    mc.joint( p=(21.3, 40.2, -1.2), n="L_ring02" )
    mc.joint( p=(22.2, 40.2, -1.2), n="L_ring03" )
    mc.joint( p=(22.9, 40.2, -1.2), n="L_ring04" )
    mc.joint( p=(23.4, 40.2, -1.2), n="L_ring05" )
    mc.select(first)
    #MIDDLE
    mc.joint( p=(19.4, 40.4, -0.7), n="L_middle01" )
    mc.joint( p=(21.3, 40.4, -0.7), n="L_middle02" )
    mc.joint( p=(22.2, 40.4, -0.7), n="L_middle03" )
    mc.joint( p=(22.9, 40.4, -0.7), n="L_middle04" )
    mc.joint( p=(23.4, 40.4, -0.7), n="L_middle05" )
    mc.select(first)
    #INDEX
    mc.joint( p=(19.4, 40.4, -0.2), n="L_index01" )
    mc.joint( p=(21.3, 40.4, -0.2), n="L_index02" )
    mc.joint( p=(22.2, 40.4, -0.2), n="L_index03" )
    mc.joint( p=(22.9, 40.4, -0.2), n="L_index04" )
    mc.joint( p=(23.4, 40.4, -0.2), n="L_index05" )
    mc.select(first)
    #THUMBS
    mc.joint( p=(19.4, 40.6, 0.5), n="L_thumbs01" )
    mc.joint( p=(20.6, 40.5, 0.9), n="L_thumbs02" )
    mc.joint( p=(21.4, 40.5, 1.4), n="L_thumbs03" )
    mc.joint( p=(22.0, 40.5, 1.8), n="L_thumbs04" )

    # SPINE
    mc.joint(p=(0, 29.3, 0), n="spine1")
    mc.joint(p=(0, 32.4, 0), n="spine2")
    mc.joint(p=(0, 35.7, 0), n="spine3")
    mc.joint(p=(0, 38.8, 0), n="spine4")
    mc.joint(p=(0, 41.7, 0), n="spine5")
    mc.select(cl=True)
    #PELVIS
    mc.joint( p=(0, 28.59, 0), n="pelvis1" )
    mc.joint( p=(0, 23.26, 0), n="pelvis2" )

    #NECK
    mc.joint( p=(0, 41.7, 0), n="neck1" )
    mc.joint( p=(0, 44.1, 0.45), n="neck2" )

    #HEAD
    first=mc.joint( p=(0, 44.1, 0.45), n="head1" )
    mc.joint( p=(0, 45.1, 0.45), n="head2" )
    mc.joint( p=(0, 44.9, 0.6), n="head3" )
    mc.joint( p=(0, 43.6, 3.1), n="head4" )
    mc.select(first)
    mc.joint( p=(0, 49.5, 0.7), n="head5" )
    mc.select(first)
    mc.joint( p=(1.6, 47, 2.8), n="L_eye" )

    mc.parent("arm1", "L_palm", "spine1", "pelvis1", "neck1", "head1", grp)
    mc.spaceLocator(n="temp_heel")
    mc.move(1.6, 0.02, - 2.14, "temp_heel")

    #Controles
    mc.circle(n="move_CC", c=(0, 0, 0), nr=(0, 1, 0), r=1.3, constructionHistory=False)
    mc.hilite("move_CC")
    mc.select("{}.cv[0:7]" .format("move_CC"), r=True)
    mc.scale(10, 10, 10, r=True, p=(0, 0, 0) )
    mc.select(cl=True)

    mc.circle(n="root_CC", c=(0, 0, 0), nr=(0, 1, 0), r=1.3, constructionHistory=False)
    mc.hilite("root_CC")
    mc.select("{}.cv[0:7]".format("root_CC"), r=True)
    mc.scale(13, 13, 13, r=True, p=(0, 0, 0))
    mc.hilite("root_CC", unHilite=True)
    mc.select(cl=True)
